<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".IntermittentFastingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="초기화" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="뒤로가기" />
    </LinearLayout>

    <!-- 시간 입력 레이아웃 -->
    <LinearLayout
        android:id="@+id/time_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <EditText
            android:id="@+id/hours_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="시간"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="26sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/minutes_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="분"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="26sp"/>
    </LinearLayout>

    <!-- 시작, 일시 정지, 종료 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_input_layout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단식 시작하기"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/end_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단식 종료하기"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시 정지"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- 타이머 텍스트 -->
    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_below="@id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:text="00:00:00"
        android:textColor="?attr/colorAccent"/>

    <!-- 프로그레스 바 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_text_view"
        android:layout_marginTop="30dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"/>

    <!-- 목표 시간 TextView -->
    <TextView
        android:id="@+id/goal_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 시간: 0시간"
        android:textSize="18sp"
        android:layout_below="@id/text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <!-- 완료 횟수 TextView -->
    <TextView
        android:id="@+id/completed_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료 횟수: 0"
        android:textSize="18sp"
        android:layout_below="@id/goal_time_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- 추가 정보 텍스트 뷰 -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="@string/nutrition_advice"/>


</RelativeLayout>
